{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "i18n": ["./i18n.json"],
      "@theme": ["./theme"],
      "@/assets/*": ["./docs/public/*"],
      "@/components/*": ["./theme/components/*"],
      "@zh/*": ["./docs/zh/*"],
      "@en/*": ["./docs/en/*"]
    }
  },
  "include": ["docs", "theme", "rspress.config.ts"],
  "mdx": {
    "checkMdx": true
  }
}
